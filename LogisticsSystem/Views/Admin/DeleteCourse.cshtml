@model LogisticsSystem.Models.Course

@{
    ViewBag.Title = "Delete Course";
}

<h2>Delete Course</h2>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this course?</strong>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Starting Point</dt>
        <dd class="col-sm-10">@Model.StartingPoint</dd>
        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Driver Id</dt>
        <dd class="col-sm-10">@Model.DriverId</dd>
        <dt class="col-sm-2">Completed?</dt>
        <dd class="col-sm-10">@(Model.IsCompleted ? "Yes" : "No")</dd>
    </dl>
</div>

<form asp-action="DeleteCourse" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageCourses" class="btn btn-secondary">Cancel</a>
</form> 