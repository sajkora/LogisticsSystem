@model LogisticsSystem.Models.User
@{
    ViewBag.Title = "Delete User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h2 class="text-danger mb-4">Are you sure you want to delete this user?</h2>
                    <div class="mb-3">
                        <strong>Name:</strong> @Model.Name <br />
                        <strong>Email:</strong> @Model.Email <br />
                        <strong>Role:</strong> @Model.Role
                    </div>
                    <form asp-action="DeleteUser" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <a asp-action="ManageUsers" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 