@model ManageUsersViewModel
@{
    ViewBag.Title = "Zarządzanie Użytkownikami";
}

<h2>Zarządzanie Użytkownikami</h2>
<a asp-action="CreateUser" class="btn btn-primary">Dodaj użytkownika</a>

<div class="my-3">
    <input type="text" id="userSearch" class="form-control" placeholder="Szukaj użytkownika... (ID, Imię, Email)">
</div>

<ul class="nav nav-tabs mt-3" id="userTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="admins-tab" data-bs-toggle="tab" data-bs-target="#admins" type="button" role="tab" aria-controls="admins" aria-selected="true">Administratorzy</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="shippers-tab" data-bs-toggle="tab" data-bs-target="#shippers" type="button" role="tab" aria-controls="shippers" aria-selected="false">Spedytorzy</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="drivers-tab" data-bs-toggle="tab" data-bs-target="#drivers" type="button" role="tab" aria-controls="drivers" aria-selected="false">Kierowcy</button>
    </li>
</ul>

<div class="tab-content mt-3" id="userTabsContent">
    <div class="tab-pane fade show active" id="admins" role="tabpanel" aria-labelledby="admins-tab">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Imię</th>
                    <th>Email</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.AdminUsers)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning">Edytuj</a>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="shippers" role="tabpanel" aria-labelledby="shippers-tab">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Imię</th>
                    <th>Email</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.ShipperUsers)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning">Edytuj</a>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="drivers" role="tabpanel" aria-labelledby="drivers-tab">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Imię</th>
                    <th>Email</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.DriverUsers)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning">Edytuj</a>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
<script>
    document.getElementById('userSearch').addEventListener('input', function() {
        const query = this.value.toLowerCase();
        document.querySelectorAll('.tab-pane.active table tbody tr').forEach(row => {
            const text = row.innerText.toLowerCase();
            row.style.display = text.includes(query) ? '' : 'none';
        });
    });
    // Also filter when switching tabs
    document.querySelectorAll('#userTabs button[data-bs-toggle="tab"]').forEach(tabBtn => {
        tabBtn.addEventListener('shown.bs.tab', function() {
            const query = document.getElementById('userSearch').value.toLowerCase();
            document.querySelectorAll('.tab-pane.active table tbody tr').forEach(row => {
                const text = row.innerText.toLowerCase();
                row.style.display = text.includes(query) ? '' : 'none';
            });
        });
    });
</script>
}
