@model LogisticsSystem.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Logowanie - Test</title>
</head>
<body>
    <h2>Logowanie - Test</h2>
    <form method="post" asp-action="LoginSimple">
        <div>
            <label>Email:</label>
            <input type="email" name="Email" value="@Model.Email" />
        </div>
        <div>
            <label>Password:</label>
            <input type="password" name="Password" value="" />
        </div>
        <button type="submit">Zaloguj się</button>
    </form>
</body>
</html>
