@model LogisticsSystem.Models.CourseEvent

@{
    ViewBag.Title = "Report Event";
}

<h2>Report Event</h2>

<form asp-action="ReportEvent" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="DriverId" />

    <div class="form-group">
        <label asp-for="EventType">Event Type</label>
        <select asp-for="EventType" class="form-control" required>
            <option value="">-- Select Event Type --</option>
            <option value="Delay">Delay</option>
            <option value="Breakdown">Breakdown</option>
            <option value="Accident">Accident</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="EventType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the event..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Event</button>
    <a asp-action="MyCourses" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 